<UserControl x:Class="PanzerGeneral2_0.Controls.HexGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PanzerGeneral2_0.Controls" 
             xmlns:hx="clr-namespace:HexGridControl;assembly=HexGridControl"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    <Grid>
        <hx:HexList Name="hexGrid" Orientation="Horizontal" Padding="10"
            RowCount="10" ColumnCount="20" >
        </hx:HexList>
    </Grid>
</UserControl>
