<unit:Unit x:Class="PanzerGeneral2_0.Controls.Units.Infantry"
             xmlns:unit ="clr-namespace:PanzerGeneral2_0.Controls.Units"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PanzerGeneral2_0.Controls.Units"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Border Background="AliceBlue" Grid.Row="1" Grid.Column="1">
            <Viewbox  Stretch="Uniform" >
                <TextBox Text="{Binding Path=Hp, Mode=TwoWay}" Background="Transparent" x:Name="HpField" BorderThickness="0" IsReadOnly="True"/>
            </Viewbox>
        </Border>
        <Grid.Background>
            <ImageBrush  Stretch="Uniform" ImageSource="/PanzerGeneral2_0;component/Resources/soldier.png" />
        </Grid.Background>
    </Grid>
</unit:Unit>
